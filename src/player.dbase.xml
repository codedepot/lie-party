<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 


<hibernate-mapping>
   
   <class name="com.lie_party.Player" table="PLAYERS">
      <meta attribute="class-description">
         the representation of players
      </meta>
      <id name="id" type="integer" column="id">
         <generator class="native"/>
      </id>
      <property name="name" column="NAME" type="string"/>
      <property name="score" column="SCORE" type="integer"/>
      <property name="answer" column="ANSWER" type="string"/>
      <property name="likes" column="LIKES" type="integer"/>
      <property name="roomCode" column="ROOMCODE" type="string"/>
      <property name="standBy" column="stand_by" type="boolean"/>
      <property name="isHost" column="is_host" type="boolean"/>
   </class>
</hibernate-mapping>


